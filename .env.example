# Flask API Configuration
FLASK_API_URL=https://your-flask-api.example.com
FLASK_API_KEY=your_api_key_here
FLASK_API_TIMEOUT=30

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=mantra_recitation
SNOWFLAKE_SCHEMA=raw
SNOWFLAKE_ROLE=your_role  # Optional

# Iceberg Configuration
ICEBERG_CATALOG_NAME=snowflake
ICEBERG_EXTERNAL_VOLUME=your_external_volume
ICEBERG_CATALOG=your_catalog_name

# Dagster Configuration
DAGSTER_HOME=/path/to/dagster/home  # Optional, defaults to ~/.dagster
